<div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
  <ul class="nav navbar-nav">
    <li><%= link_to 'Home', root_path %></li>
  </ul>
  <% if logged_in? %>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Tweet', new_tweet_path %></li>
      <li><%= link_to (current_user.not_read_mentions_count == 0) ? "Mentions" : "Mentions(#{current_user.not_read_mentions_count})", mentions_user_path(current_user) %></li>
      <li><%= link_to 'Who_to_follow', who_to_follow_user_path(current_user) %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Welcome, #{current_user.username}", user_path(current_user) %></li>
      <li><%= link_to 'Log Out', logout_path %></li>
    </ul>
  <% else %>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Register', new_user_path %></li>
      <li><%= link_to 'Log In', login_path %></li>
    </ul>
  <% end %>
</div>
